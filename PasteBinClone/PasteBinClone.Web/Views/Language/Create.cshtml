@model LanguageVM

<div class="container h-100 w-100 d-flex justify-content-center">

    <form method="post" class="border border-1 w-50 p-2 mt-4">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row text-center mb-4">
            <h2 class="text-info ps-4">Add Language</h2>
        </div>

        <div class="mb-3 ps-3">

            <h6 class="form-label">Name</h6>
            <span asp-validation-for="LanguageName" class="text-danger"></span>
            <input asp-for=LanguageName class="form-control mb-3 w-75 mt-1" />

            <div>
                <button type="submit" class="btn method-btn method-btn_create me-md-3 me-1">Create</button>
                <a asp-action="Index" class="btn create-back-btn">Back</a>
            </div>

        </div>

    </form>

</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}