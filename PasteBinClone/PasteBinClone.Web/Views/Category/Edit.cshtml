@using PasteBinClone.Web.Models.ViewModel
@model CategoryVM

<div class="container h-100 w-100 d-flex justify-content-center">

    <form method="post" class="border border-1 w-50 p-2 mt-4">
        <div class="form-group row text-center mb-4">
            <h2 class="text-info ps-4">Update Category</h2>
        </div>

        <div class="mb-3 ps-3">

            <h6 class="form-label">Name</h6>
            <input asp-for=CategoryName class="form-control mb-3 w-75"/>

            <button type="submit" class="btn method-btn method-btn_create me-md-3 me-1">Update</button>
            <button asp-action="Index" type="submit" class="btn create-back-btn">Back</button>

        </div>

    </form>

</div>