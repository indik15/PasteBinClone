@using PasteBinClone.Web.Models.ViewModel
@model IEnumerable<CategoryVM>

<div class="container h-100 w-100 pt-5 p-3">

    <form method="get">

        <div class="row">
            <div class="col">
                <h2 class="playfair-display">Category List</h2>
            </div>
            <div class="col text-end">
                <button asp-action="Create" type="submit" class="btn btn-primary">New Category</button>
            </div>
        </div>

        <br />

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if(Model.Any())
                {
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td class="table-filter roboto-regular">
                                @obj.CategoryName
                            </td>

                            <td class="text-center">
                                <button asp-action="Edit" asp-route-id="@obj.id" type="submit" class="btn btn-secondary me-2 w-25 category-edit-btn">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button asp-action="Delete" asp-route-id="@obj.id" type="submit" class="btn btn-danger w-25 category-edit-btn">
                                    <i class="far fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td>
                            <span class="table-filter roboto-regular">
                                The list is empty.
                            </span>
                        </td>
                        <td>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>

</div>